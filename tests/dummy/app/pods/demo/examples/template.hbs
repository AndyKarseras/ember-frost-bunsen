<div class='demo-container fullscreen'>
  <div class="demo-banner">
    <h1>Examples</h1>
    <p>Various model/view schemas examples</p>
  </div>
  {{#model-view-selector
    modelOptions=modelOptions
    onSelectModel=(action "onSelectModel")
    onSelectView=(action "onSelectView")
    onSelectValue=(action "onSelectValue")
    selectedModel=selectedModel
    selectedValue=selectedValue
    selectedView=selectedView
    valueOptions=valueOptions
    valueSelectionDisabled=valueSelectionDisabled
    viewOptions=viewOptions
    viewSelectionDisabled=viewSelectionDisabled
  }}
    Detail: {{frost-checkbox onInput=(action "toggleDetail")}}
    Inline: {{frost-checkbox onInput=(action "toggleInline")}}
    <h2 class="demo-header">Rendered Demo</h2>
    {{#if detail}}
      {{frost-bunsen-detail
        renderers=renderers
        model=selectedModel.model
        value=selectedValue.value
        view=selectedView.view
      }}
    {{else}}
      {{frost-bunsen-form
        inline=inline
        onChange=(action "onChange")
        renderers=renderers
        model=selectedModel.model
        value=selectedValue.value
        view=selectedView.view
      }}
    {{/if}}
  {{/model-view-selector}}
  <div class="demo-code-container">
    {{#if formValue}}
      <div class="demo-code-block">
        <h2>Value</h2>
        {{ivy-codemirror value=formValue lineNumbers=true mode='javascript' theme='mdn-like'}}
      </div>
    {{/if}}
    {{#if selectedModel}}
      <div class="demo-code-block">
        <h2>Model</h2>
        {{ivy-codemirror value=modelCode lineNumbers=true mode='javascript' theme='mdn-like'}}
      </div>
   {{/if}}
    {{#if selectedView}}
      <div class="demo-code-block">
        <h2>View</h2>
        {{ivy-codemirror value=viewCode lineNumbers=true mode='javascript' theme='mdn-like'}}
      </div>
    {{/if}}
  </div>
</div>
