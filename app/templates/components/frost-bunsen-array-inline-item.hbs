{{#if (and (not compact) showRemoveButton)}}
  <div class="remove-btn-container">
    {{#frost-button
      class="medium tertiary text"
      onClick=(action "onRemove")
    }}
      Remove
    {{/frost-button}}
  </div>
{{/if}}
{{#if sortable}}
  {{frost-icon class="handle" icon="frost/menu"}}
{{/if}}
<div class="item-input">
  {{#if cellConfig.item.renderer}}
    {{component customRenderer
      bunsenId=(concat bunsenId '.' index)
      cellConfig=cellConfig
      label=label
      model=model.items
      onChange=onChange
      readOnly=readOnly
      store=store
      value=value
    }}
  {{else if (eq model.items.type "object")}}
    {{frost-bunsen-model-container
      bunsenId=(concat bunsenId '.' index)
      cellConfig=cellConfig.item
      errors=errors
      label=label
      model=model.items
      onChange=onChange
      readOnly=readOnly
      store=store
      value=value
    }}
  {{else}}
    {{frost-bunsen-input-wrapper
      bunsenId=(concat bunsenId '.' index)
      cellConfig=cellConfig.item
      errorMessage=errorMessage
      label=label
      model=model.items
      onChange=onChange
      readOnly=readOnly
      store=store
      value=renderValue
    }}
  {{/if}}
</div>
{{#if (and compact showRemoveButton)}}
  <div class="remove-btn-container">
    {{#frost-button
      class="medium tertiary text"
      onClick=(action "onRemove")
    }}
      Remove
    {{/frost-button}}
  </div>
{{/if}}
